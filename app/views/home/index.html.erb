<h1>Index Page</h1>

<h2><%= @title %></h2>
<ul>
    <!-- untuk render variable dari controller -->
    <% @langs.each do |lang| %>
        <li><%= lang %></li>
    <% end %>
</ul>

<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Page</th>
        <th>Description</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td><%= book.id %></td>
            <td><%= book.title %></td>
            <td><%= book.page %></td>
            <td><%= book.description %></td>
        </tr>
    <% end %>
</table>

<%= render 'information', product_laris: @title, products: @books %>