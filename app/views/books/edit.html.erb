<h1>
    <%= @title %>
</h1>

<%= form_for(@book) do |f| %>
    <div
        <%= f.label :title %> :
        <%= f.text_field :title %>
    </div>
    <br>
    <div
        <%= f.label :page %> :
        <%= f.number_field :page %>
    </div>
    <br>
    <div
        <%= f.label :description %> :
        <%= f.text_area :description %>
    </div>
    <br>
    <div>
        <%= f.submit %>
    </div>
<% end %>